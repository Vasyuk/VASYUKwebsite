<h1>MES PROJETS</h1>
<% @project.each do |project| %>
  <div class="row">
    <div class = "col-md-12 project">
      <div class = "row">
        <div class = "col-md-7">
          <%= render 'layouts/slider' %>
        </div>
        <div class = "col-md-5">
           <div class = "row">
            <div class = "col-md-12">
                <h3><%= link_to project.name, project %></h3>
            </div>
            <hr>
            <div class = "col-md-12">
                <p><%= project.content %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
